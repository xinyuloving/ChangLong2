<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ListEmReportActivity">


    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/statusBarColor"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:layout_marginLeft="@dimen/padding_10"
            android:gravity="start"
            android:text="@string/textview_click_before"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_large"
            android:maxLines="1"
            android:maxEms="4"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_sghow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/tv_yjbg"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_22"
            android:singleLine="true"
            android:maxEms="4"
            android:ellipsize="marquee"/>

        <ImageView
            android:id="@+id/iv_addUser"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:contentDescription="@string/tv_radduser"
            android:src="@mipmap/user_add_icon"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lv_show_path"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_title"
        app:layout_constraintVertical_bias="0.542"></ListView>

