<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/initem"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context=".activity.CurveManageActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/statusBarColor">

        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="@dimen/dp_24"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:src="@mipmap/iv_return" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_weight="8"
            android:gravity="center"
            android:text="曲线1-2018…."
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="15dp"
       android:layout_marginTop="35dp"
       android:layout_marginBottom="35dp"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/textView1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="3"
               android:gravity="center|right"
               android:text="曲        线："
               android:textColor="@color/statusBarColor"
               android:textSize="18sp" />

           <EditText
               android:id="@+id/etName"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="7.0"
               android:ems="10"></EditText>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/textView11"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="3"
               android:gravity="center|right"
               android:text="稀释倍数："
               android:textColor="@color/statusBarColor"
               android:textSize="18sp" />

           <EditText
               android:id="@+id/etXishi"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="7.0"
               android:hint="输入稀释倍数"
               android:inputType="number"></EditText>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/textView2"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="3"
               android:gravity="center|right"
               android:text="检测上限："
               android:textColor="@color/statusBarColor"
               android:textSize="18sp" />

           <com.allen.library.SuperTextView
               android:id="@+id/stv_open"
               android:layout_width="0dp"
               android:layout_weight="7.0"
               android:layout_height="48dp"
               stv:sLeftTextString="开启/关闭"
               stv:sRightViewType="switchBtn"
               stv:sSwitchIsChecked="true"
               stv:sThumbResource="@drawable/thumb"
               stv:sTrackResource="@drawable/track" />

       </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/textView5"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="3"
               android:gravity="center|right"
               android:text="检测下限："
               android:textColor="@color/statusBarColor"
               android:textSize="18sp" />

           <com.allen.library.SuperTextView
               android:id="@+id/stv_close"
               android:layout_width="0dp"
               android:layout_weight="7.0"
               android:layout_height="48dp"
               stv:sLeftTextString="开启/关闭"
               stv:sRightViewType="switchBtn"
               stv:sSwitchIsChecked="true"
               stv:sThumbResource="@drawable/thumb"
               stv:sTrackResource="@drawable/track" />

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/textView3"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="3"
               android:gravity="center|right"
               android:text="检测波长："
               android:textColor="@color/statusBarColor"
               android:textSize="18sp" />

           <EditText
               android:id="@+id/etTranrate"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="7.0"
               android:ems="10"
               android:hint="620nm"
               android:editable="false"
               android:focusable="false">

           </EditText>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/textView4"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="3"
               android:gravity="center|right"
               android:text="分  辨  率："
               android:textColor="@color/statusBarColor"
               android:textSize="18sp" />

           <org.angmarch.views.NiceSpinner
               android:id="@+id/ns_fbl"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="7.0" />

       </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/textView6"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="3"
               android:gravity="center|right"
               android:text="校        准："
               android:textColor="@color/statusBarColor"
               android:textSize="18sp" />

           <EditText
               android:id="@+id/et_jiaozhun"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="7.0"
               android:hint="C=kA+b" />

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/textView7"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="3"
               android:gravity="center|right"
               android:text="检测工具："
               android:textColor="@color/statusBarColor"
               android:textSize="18sp" />

           <EditText
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="7.0"
               android:hint="比色管"
               android:editable="false"
               android:focusable="false"/>

       </LinearLayout>
   </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <Button
            android:id="@+id/addbtn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="确定修改"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:background="@drawable/btn_bg_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearlayout"
            app:layout_constraintVertical_bias="0.961"/>


        <Button
            android:id="@+id/cancelbtn"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="取消并返回"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:background="@drawable/btn_bg_yellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearlayout"
            app:layout_constraintVertical_bias="0.961"/>

    </LinearLayout>

</LinearLayout>