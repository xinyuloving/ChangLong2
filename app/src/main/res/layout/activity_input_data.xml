<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InputDataActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:orientation="horizontal"
        android:background="@color/statusBarColor"
        android:gravity="center">
        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_24"
            android:layout_weight="2"
            android:layout_gravity="start|center"
            android:src="@mipmap/iv_return"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_return"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_48"
            android:layout_weight="3"
            android:text="＜返回"
            android:textSize="@dimen/textsize_20"
            android:textColor="@color/white"
            android:gravity="start|center" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="@dimen/dp_48"
            android:text="@string/tv_cure_adjust"
            android:textSize="@dimen/textsize_30"
            android:textColor="#ffffff"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_user"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="@dimen/dp_48"
            android:text="用户名"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#ffffff"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:singleLine="false"
        android:text="@string/tv_cure_adjust_shuju"
        android:textColor="@color/statusBarColor"
        android:textSize="@dimen/textsize_22"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068"
        android:layout_margin="@dimen/dp_16"
        app:cardCornerRadius="10dp">
        <TextView
            android:id="@+id/tv_cod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="false"
            android:textColor="@color/statusBarColor"
            android:textSize="@dimen/textsize_small"
            android:textStyle="bold"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_margin="@dimen/dp_16"
        app:cardCornerRadius="@dimen/padding_10"
        app:layout_constraintEnd_toEndOf="@+id/cardview1"
        app:layout_constraintStart_toStartOf="@+id/cardview1"
        app:layout_constraintTop_toBottomOf="@+id/cardview1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="请放入空白比色管"
                android:textColor="@color/statusBarColor"
                android:textSize="@dimen/textsize_38"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="请按空白键"
                android:textColor="@color/statusBarColor"
                android:textSize="@dimen/textsize_38"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="请取出空白比色管"
                android:textColor="@color/statusBarColor"
                android:textSize="@dimen/textsize_38"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_line4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="请放入样品"
                android:textColor="@color/statusBarColor"
                android:textSize="@dimen/textsize_38"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_line5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="请按确认键"
                android:textColor="@color/statusBarColor"
                android:textSize="@dimen/textsize_38"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_show1"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="start|center"
            android:text="请放入空白比色管\n请按空白键\n请取出空白比色管\n请放入样品\n请按确认键"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_28"
            android:visibility="gone" />


        <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
            android:id="@+id/rv_curve"
            android:layout_width="match_parent"
            android:layout_height="240dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_add"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="bottom|end"
            android:clickable="true"
            android:src="@mipmap/float_add"
            app:fabSize="mini" />
    </android.support.v7.widget.CardView>


    <EditText
        android:id="@+id/ed_input"
        android:layout_width="0dp"
        android:layout_height="210dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/dash_line"
        android:layerType="software"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/cardview2"/>

    <TextView
        android:id="@+id/tv_show_data"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:singleLine="false"
        android:text="C=kA+b\n R²=99.99%"
        android:textColor="@color/statusBarColor"
        android:textSize="@dimen/textsize_28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/statusBarColor"
        android:textSize="@dimen/textsize_22"
        app:layout_constraintEnd_toEndOf="@+id/tv_show_data"
        app:layout_constraintStart_toStartOf="@+id/tv_show_data"
        app:layout_constraintTop_toBottomOf="@+id/tv_show_data"
        android:visibility="gone"/>
    <TextClock
        android:id="@+id/tc_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#6E6F6F"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_margin="@dimen/dp_16"
        android:format24Hour="yyyy年MM月dd日 HH:mm"
        app:layout_constraintEnd_toEndOf="@+id/tv_show_data"
        app:layout_constraintStart_toStartOf="@+id/tv_show_data"
        app:layout_constraintTop_toBottomOf="@+id/tv_show_data"/>

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_bg_blue"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/textsize_24"
        app:layout_constraintEnd_toEndOf="@+id/tc_time"
        app:layout_constraintStart_toStartOf="@+id/tc_time"
        app:layout_constraintTop_toBottomOf="@+id/tc_time" />
    <LinearLayout
        android:id="@+id/line_xiaozhun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tv_timer"
        app:layout_constraintStart_toStartOf="@+id/tv_timer"
        app:layout_constraintTop_toBottomOf="@+id/tv_timer"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:visibility="invisible">
        <Button
            android:id="@+id/btn_blank"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_bg_yellow"
            android:gravity="center"
            android:text="@string/blank"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/textsize_24"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_bg_blue"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/textsize_24"
            android:layout_weight="1" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>