<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InputDataActivity">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/statusBarColor"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_36"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:src="@mipmap/iv_return" />
        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="@dimen/dp_48"
            android:text="曲线校准"
            android:textSize="@dimen/textsize_30"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:gravity="center" />
        <TextView
            android:id="@+id/tv_user"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="@dimen/dp_48"
            android:text="用户名"
            android:textSize="@dimen/textsize_20"
            android:textColor="#ffffff"
            android:gravity="center"
            android:singleLine="true"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:singleLine="false"
        android:text="@string/tv_cure_adjust_shuju"
        android:textColor="@color/statusBarColor"
        android:textSize="@dimen/textsize_22"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068"
        android:layout_margin="@dimen/dp_16"
        app:cardCornerRadius="10dp">
        <TextView
            android:id="@+id/tv_cod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:singleLine="false"
            android:textColor="@color/statusBarColor"
            android:textSize="@dimen/textsize_small"
            android:textStyle="bold"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="@+id/cardview1"
        app:layout_constraintStart_toStartOf="@+id/cardview1"
        app:layout_constraintTop_toBottomOf="@+id/cardview1"
        app:cardCornerRadius="@dimen/padding_10">
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
            android:id="@+id/rv_curve"
            android:layout_width="match_parent"
            android:layout_height="260dp" />
    </android.support.v7.widget.CardView>


    <EditText
        android:id="@+id/ed_input"
        android:layout_width="0dp"
        android:layout_height="210dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="C1=5mg/L，A1=0.100\nC2=10mg/L，A2=0.200\nC3=20mg/L，A3=0.400\nC4=50mg/L，A4=1.000\nC5=100mg/L，A5=2.00"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/dash_line"
        android:layerType="software"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/cardview2"/>

    <TextView
        android:id="@+id/tv_show_data"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:singleLine="false"
        android:text="C=kA+b\n R2=99.99%"
        android:textColor="@color/statusBarColor"
        android:textSize="@dimen/textsize_28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/statusBarColor"
        android:textSize="@dimen/textsize_24"
        app:layout_constraintEnd_toEndOf="@+id/tv_show_data"
        app:layout_constraintStart_toStartOf="@+id/tv_show_data"
        app:layout_constraintTop_toBottomOf="@+id/tv_show_data" />

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="182dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_line_blue"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/textsize_24"
        app:layout_constraintEnd_toEndOf="@+id/tv_timer"
        app:layout_constraintStart_toStartOf="@+id/tv_timer"
        app:layout_constraintTop_toBottomOf="@+id/tv_timer" />

</android.support.constraint.ConstraintLayout>