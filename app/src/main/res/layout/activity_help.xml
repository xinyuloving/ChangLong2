<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HelpActivity">

    <com.allen.library.SuperTextView
        android:id="@+id/superTextView2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151"
        stv:sCenterBottomTextColor="@color/colorAccent"
        stv:sCenterBottomTextString="详细说明>>"
        stv:sCenterTopTextString=" "
        stv:sCenterViewGravity="left_center"
        stv:sLeftBottomTextString="系统介绍"
        stv:sLeftIconRes="@drawable/ic_card_background"
        stv:sLeftTopTextString="系统"
        stv:sLeftViewGravity="left_center"
        stv:sRightCheckBoxRes="@drawable/ic_info_black_24dp"
        stv:sRightViewType="checkbox" />

    <com.allen.library.SuperTextView
        android:id="@+id/superTextView3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.295"
        stv:sCenterBottomTextColor="@color/colorAccent"
        stv:sCenterBottomTextString="详细说明>>"
        stv:sCenterTopTextString=" "
        stv:sCenterViewGravity="left_center"
        stv:sLeftBottomTextString="如何使用"
        stv:sLeftIconRes="@drawable/ic_card_background"
        stv:sLeftTopTextString="个性化"
        stv:sLeftViewGravity="left_center"
        stv:sRightCheckBoxRes="@drawable/ic_info_black_24dp"
        stv:sRightViewType="checkbox" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/superTextView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        stv:srcCompat="@mipmap/icon_logo" />

</android.support.constraint.ConstraintLayout>