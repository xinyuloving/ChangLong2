<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login"
    tools:context=".activity.SendEmailActivity">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:layout_marginStart="@dimen/padding_10"
            android:gravity="start"
            android:text="@string/textview_click_before"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_large"
            android:maxLines="1"
            android:maxEms="4"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/tv_email"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_22"/>

        <TextView
            android:id="@+id/tv_cod"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_large" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="214dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/iv_contentDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_title"
        app:srcCompat="@mipmap/icon_logo_while" />


    <EditText
        android:id="@+id/et_email_addr"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="@string/input_email_addr"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/tv_email_addr"
        android:textSize="@dimen/textsize_large"
        android:textColor="@color/colorOrangePrimary"
        app:layout_constraintBottom_toBottomOf="@+id/et_email_addr"
        app:layout_constraintEnd_toStartOf="@+id/et_email_addr"
        app:layout_constraintTop_toTopOf="@+id/et_email_addr" />

    <EditText
        android:id="@+id/et_email_copy"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/input_email_copy"
        app:layout_constraintEnd_toEndOf="@+id/et_email_addr"
        app:layout_constraintStart_toStartOf="@+id/et_email_addr"
        app:layout_constraintTop_toBottomOf="@+id/et_email_addr" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/tv_email_copy"
        android:textColor="@color/colorOrangePrimary"
        android:textSize="@dimen/textsize_large"
        app:layout_constraintBottom_toBottomOf="@+id/et_email_copy"
        app:layout_constraintEnd_toStartOf="@+id/et_email_copy"
        app:layout_constraintTop_toTopOf="@+id/et_email_copy"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/et_email_bcc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/input_email_bcc"
        app:layout_constraintEnd_toEndOf="@+id/et_email_copy"
        app:layout_constraintStart_toStartOf="@+id/et_email_copy"
        app:layout_constraintTop_toBottomOf="@+id/et_email_copy" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/tv_email_bcc"
        android:textColor="@color/colorOrangePrimary"
        android:textSize="@dimen/textsize_large"
        app:layout_constraintBottom_toBottomOf="@+id/et_email_bcc"
        app:layout_constraintEnd_toStartOf="@+id/et_email_bcc"
        app:layout_constraintTop_toTopOf="@+id/et_email_bcc"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/et_email_theme"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="@string/input_email_theme"
        android:inputType="textEmailSubject"
        app:layout_constraintEnd_toEndOf="@+id/et_email_bcc"
        app:layout_constraintStart_toStartOf="@+id/et_email_bcc"
        app:layout_constraintTop_toBottomOf="@+id/et_email_bcc" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/tv_email_theme"
        android:textSize="@dimen/textsize_large"
        android:textColor="@color/colorOrangePrimary"
        app:layout_constraintBottom_toBottomOf="@+id/et_email_theme"
        app:layout_constraintEnd_toStartOf="@+id/et_email_theme"
        app:layout_constraintTop_toTopOf="@+id/et_email_theme" />


    <EditText
        android:id="@+id/et_email_fujian"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="附件"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/et_email_theme"
        app:layout_constraintStart_toStartOf="@+id/et_email_theme"
        app:layout_constraintTop_toBottomOf="@+id/et_email_theme" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/tv_email_attachment"
        android:textSize="@dimen/textsize_large"
        android:textColor="@color/colorOrangePrimary"
        app:layout_constraintBottom_toBottomOf="@+id/et_email_fujian"
        app:layout_constraintEnd_toStartOf="@+id/et_email_fujian"
        app:layout_constraintTop_toTopOf="@+id/et_email_fujian" />

    <EditText
        android:id="@+id/et_email_cont"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="@string/input_email_cont"
        app:layout_constraintEnd_toEndOf="@+id/et_email_fujian"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/et_email_fujian"
        app:layout_constraintTop_toBottomOf="@+id/et_email_fujian" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/tv_email_cont"
        android:textSize="@dimen/textsize_large"
        android:textColor="@color/colorOrangePrimary"
        app:layout_constraintBottom_toBottomOf="@+id/et_email_cont"
        app:layout_constraintEnd_toStartOf="@+id/et_email_cont"
        app:layout_constraintTop_toTopOf="@+id/et_email_cont" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="295dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/border_line_orange"
        android:text="@string/btn_send_email"
        android:textSize="@dimen/textsize_24"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email_cont"/>


</android.support.constraint.ConstraintLayout>